{{!-- The Search page --}}
<div class="grid-x">
    <div class="cell medium-3 medium-offset-3 topCard card">
        <div class="card-divider">
            <h2 class="cardHdr">Search for Beer and Beer Venues</h2>
        </div>
    </div>
    <div class="cell medium-4"></div>    
</div>

<div class="grid-x">
    <div class="cell medium-3 medium-offset-1 topCardSearch card">
        <ul class="tabs" data-tabs id="beer-tabs">
            <li class="tabs-title is-active"><a href="#panel1" aria-selected="true"><span class="tabText">Search for Beer</span></a></li>
            <li class="tabs-title"><a href="#panel2"><span class=tabText>Search for Venues</span></a></li>
        </ul>
        <div class="tabs-content" data-tabs-content="beer-tabs">
            <div class="tabs-panel is-active" id="panel1">

                <form action="/searchBeer" method="get">
                    <div class="grid-x">
                        <div class="medium-10 cell end input-group">
                            <label class="input-group-label searchLabel">Beer Name:</label>
                            <input class="input-group-field searchBox" name="beerName" id="beerName" type="text" placeholder="">
                        </div>
                    </div>
                    <div class="grid-x">    
                        <div class="medium-10 cell end input-group">
                            <label class="input-group-label searchLabel">Beer Category:</label>
                            <select class="input-group-field searchBox" name="beerType" id="beerType">
                                <option value="0"></option>
                                <option value="1">British Origin Ales</option>
                                <option value="2">Irish Origin Ales</option>
                                <option value="3">North American Origin Ales</option>
                                <option value="4">German Origin Ales</option>
                                <option value="5">Belgian And French Origin Ales</option>
                                <option value="6">International Ale Styles</option>
                                <option value="7">European-germanic Lager</option>
                                <option value="8">North American Lager</option>
                                <option value="9">Other Lager</option>
                                <option value="10">International Styles</option>
                                <option value="11">Hybrid/mixed Beer</option>
                                <option value="12">Mead, Cider, Perry</option>
                                <option value="13">Other Origin</option>
                                <option value="14">Malternative Beverages</option>
                            </select>
                                    
                        </div>
                    </div>
                    <div class="grid-x">
                        <div class="medium-10 cell end input-group">
                            <label class="input-group-label searchLabel">Display Brewery:</label>
                            <select class="input-group-field searchBox" name="displayBrewery" id="displayBrewery">
                                <option value="N">No</option>
                                <option value="Y">Yes</option>
                            </select>                            
                        </div>
                    </div>
                    <div class="grid-x">
                        <div class="medium-10 medium-offset-1 cell end input-group">
                            <div>
                                <input type="submit" class="button large beerSearchButton" value="Submit">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tabs-panel" id="panel2">
                <form class="eventSearch">
                    <div class="grid-x">
                        <div class="medium-10 cell end input-group">
                            <label class="input-group-label searchLabel">Venue:</label>
                            <input class="input-group-field venue searchBox" type="text" placeholder="">
                        </div>
                    </div>
                    <div class="grid-x">
                        <div class="medium-10 cell end input-group">
                            <label class="input-group-label searchLabel">City:</label>
                            <input class="input-group-field city searchBox" type="text" placeholder="">

                        </div>
                    </div>
                    <div class="grid-x">
                        <div class="medium-10 cell end input-group">
                            <label class="input-group-label searchLabel">State:</label>
                            <input class="input-group-field state searchBox" type="text" placeholder="">
                        </div>
                    </div>
                    <div class="grid-x">
                        <div class="medium-9 medium-offset-1 cell end input-group">
                            <div>
                                <input type="submit" class="button large venueSearchButton" value="Submit">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="cell medium-1"></div>
    <div class="cell medium-5 card topCardSearch"></div>
    <div class="cell medium-1"></div>
</div> 
<hr>
<div class="grid-x grid-margin-x">
    <div class=" cell medium-10 medium-offset-1 card topCard">
        <div class="card-divider">
            <h2 class="cardHdr">Search Results</h2>
        </div>
        <div class="searchResults">
            {{#each body.data}}
                <h2>{{name}}</h2>
            {{/each}}
           
        </div>
        <table>
            <thead>
                <th>Name</th>
                <th>Job Title</th>
                <th>Twitter</th>
            </thead>
            <tbody>
                {{#each students}}
                    <tr>
                        <td>{{ this.name }}</td>
                        <td>{{ this.mark }}</td>
                        <td>{{ this.subject }}</td>
                    </tr>
                {{/each}}
                {{#users}}
                    <tr>
                        <td>{{fullName person}}</td>
                        <td>{{jobTitle}}</td>
                        <td><a href="https://twitter.com/{{twitter}}">@{{twitter}}</a></td>
                    </tr>
                {{/users}}
            </tbody>
        </table>
    </div>
    <div class="cell medium-1"></div>
</div>
